---
export interface Props {
  instructions?: string[];
  showPremiumTeaser?: boolean;
}

const { instructions = [], showPremiumTeaser = true } = Astro.props;

// Demo instructions if none provided
const defaultInstructions = [
  "Season 2 chicken breasts with salt and pepper",
