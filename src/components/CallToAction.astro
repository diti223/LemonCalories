---
// Component: CallToAction.astro
// Purpose: Email capture and conversion section
import EmailForm from './EmailForm.astro';
---

<section class="py-20 bg-gradient-to-r from-lemon-400 to-lemon-500 dark:from-lemon-600 dark:to-lemon-700">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-3xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
      Be first to try recipe nutrition analysis
    </h2>
    
    <p class="text-xl md:text-2xl text-gray-700 dark:text-gray-200 mb-8 max-w-2xl mx-auto">
      Join our exclusive early access program. Perfect for home cooks, meal planners, and anyone curious about recipe nutrition.
    </p>
    
    <div class="max-w-md mx-auto">
      <EmailForm 
        source="footer" 
        variant="primary"
        placeholder="Enter your email address"
        buttonText="Get Notified"
      />
      
      <p class="text-sm text-gray-700 dark:text-gray-300 mt-4">
        ðŸ”’ No spam, ever. Unsubscribe with one click.
      </p>
    </div>
    
    <div class="mt-12 grid grid-cols-3 gap-8 text-center">
      <div>
        <div class="text-2xl font-bold text-gray-900 dark:text-white">500+</div>
        <div class="text-sm text-gray-700 dark:text-gray-300">People waiting</div>
      </div>
      <div>
        <div class="text-2xl font-bold text-gray-900 dark:text-white">&lt; 30s</div>
        <div class="text-sm text-gray-700 dark:text-gray-300">Per recipe analysis</div>
      </div>
      <div>
        <div class="text-2xl font-bold text-gray-900 dark:text-white">95%</div>
        <div class="text-sm text-gray-700 dark:text-gray-300">Parsing accuracy</div>
      </div>
    </div>
  </div>
</section> 